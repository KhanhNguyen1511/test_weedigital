<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg_img"
    tools:context=".MainActivity">

    <ImageView
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@mipmap/logo_vinhome"
        />
    <TextView
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logo_text"
        android:textColor="@color/logo_text_color"
        android:textStyle="bold"
        />

    <EditText

        android:layout_marginTop="64dp"
        android:textColorHint="@color/text_main_color"
        android:textColor="@color/text_main_color"
        android:backgroundTint="@color/text_main_color"
        android:hint="@string/user_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText

        android:layout_marginTop="32dp"
        android:textColorHint="@color/text_main_color"
        android:textColor="@color/text_main_color"
        android:backgroundTint="@color/text_main_color"
        android:hint="@string/password_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:background="@drawable/my_button"
        android:textColor="@color/button_text_color"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/button_text"/>



</LinearLayout>